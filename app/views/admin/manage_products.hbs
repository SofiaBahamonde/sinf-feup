
<ol class="p_breadcrumb breadcrumb" style="margin-top:0">
<li class="breadcrumb-item"><a href="/">Home</a></li>
<li class="breadcrumb-item active">Manage Products</li>
</ol>
<hr>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.25/css/uikit.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.25/js/uikit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.25/js/uikit-icons.min.js"></script>

<div class="container adminContainer" style="height: 100vh">

    <div uk-slider="center: true">

        <div class="uk-position-relative">

            <div class="uk-slider-container" style="height:450px">
                <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m uk-grid uk-margin-bottom" >
                   {{#each products}}
                     <li>
                        <div class="uk-card uk-card-default">
                            <div class="uk-card-media-top">
                                <img src="../../images/products/{{Artigo}}.png" alt="" >
                            </div>
                            <div class="uk-card-body uk-padding-remove-top">
                                <h3 class="uk-card-title" style="font-size:18px">{{Descricao}}</h3>
                                <p class="mb-0">Stock: {{Column1}}</p>
                                <p class="m-0">Warehouse: {{Armazem}}</p>
                                <div class=" dropright" style="z-index:999999">
                                    <a class=" dropdown-toggle font-weight-bold" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Order Stock
                                    </a>
                                    <div class="dropdown-menu w-75">
                                        <form class="px-3 py-1" action="/admin/manage/products/{{Artigo}}" method="post">
                                            <div class="form-group">
                                            <label for="qty"> Quantity </label>
                                            <input id="qty" type="number" class="form-control form-control-sm" name="quantity" value="10">
                                            </div>
                                            
                                            <button type="submit" class="btn btn-dark btn-sm float-right" >Confirm</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                     {{/each}}
                </ul>
            </div>

            <div class="uk-hidden@s uk-light">
                <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>

            <div class="uk-visible@s">
                <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
            </div>

        </div>

        <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>

    </div>
</div>